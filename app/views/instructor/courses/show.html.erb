<br />
<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1 class="text-center"><%= @course.title %></h1>
  <br />
  <%= link_to 'Preview as student', course_path(@course), class: 'btn btn-warning pull-right' %>
  <br class="clr" />
  <div class="text-center">
      <%= link_to 'Add a new section', new_instructor_course_section_path(@course), class: 'btn btn-primary btn-lrg' %>
  </div>
  
  <ul>
      <% @course.sections.each do |section| %>
          <li>
              <%= section.title %>
              <%= link_to "New Lesson", new_instructor_section_lesson_path(section), class: 'btn btn-primary btn-xs pull-right' %>
              <ul>
                <% section.lessons.each do |lesson| %>
                  <li>
                    <strong><%= lesson.title %></strong>
                    -
                    <%= lesson.subtitle %>
                  </li>
              <% end %>
              </ul>
              <br class="clr" />
          </li>
      <% end %>
  </ul>
  
</div>